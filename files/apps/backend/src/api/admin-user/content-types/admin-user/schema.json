{
  "kind": "collectionType",
  "collectionName": "admin_user_profiles",
  "info": {
    "singularName": "admin-user",
    "pluralName": "admin-users",
    "displayName": "Admin User",
    "description": "Admin user profiles with role-based permissions"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "username": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "email": {
      "type": "email",
      "required": true,
      "unique": true
    },
    "password": {
      "type": "password",
      "required": true
    },
    "firstName": {
      "type": "string",
      "required": true
    },
    "lastName": {
      "type": "string",
      "required": true
    },
    "role": {
      "type": "enumeration",
      "enum": ["SA", "DEV", "SH", "CT", "CS"],
      "default": "CS",
      "required": true
    },
    "department": {
      "type": "string"
    },
    "permissions": {
      "type": "json",
      "description": "Role-based permissions matrix"
    },
    "isActive": {
      "type": "boolean",
      "default": true
    },
    "lastLogin": {
      "type": "datetime"
    },
    "createdBy": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::admin-user.admin-user"
    },
    "profilePicture": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"]
    }
  }
}