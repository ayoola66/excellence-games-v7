{
  "kind": "collectionType",
  "collectionName": "admin_user_profiles",
  "info": {
    "singularName": "admin-user",
    "pluralName": "admin-users",
    "displayName": "Admin User",
    "description": "Admin user profiles with role-based permissions"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "email": {
      "type": "email",
      "required": true,
      "unique": true
    },
    "password": {
      "type": "text",
      "required": true
    },
    "fullName": {
      "type": "string",
      "required": true
    },
    "adminType": {
      "type": "enumeration",
      "enum": ["SA", "DEV", "SH", "CT", "CS"],
      "default": "CS",
      "required": true
    },
    "badge": {
      "type": "string",
      "required": true
    },
    "permissions": {
      "type": "json",
      "description": "Role-based permissions matrix"
    },
    "isActive": {
      "type": "boolean",
      "default": true
    },
    "lastLogin": {
      "type": "datetime"
    },
    "sessionToken": {
      "type": "text"
    },
    "profilePicture": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"]
    }
  }
}